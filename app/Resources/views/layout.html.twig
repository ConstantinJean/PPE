							<li><a href="{{ path('musee_contact') }}">Admin</a></li>
								
								
						</ul>
						<div class="pull-right">
							{% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
								<a href="{{ path('fos_user_security_logout') }}" class="btn btn-primary btn-small">DÃ©connexion</a>
							{% else %}
								<a href="{{ path('fos_user_security_login') }}" class="btn btn-primary btn-small">Connexion</a>
							{% endif %}
						</div>
					</div>
				</div>
				
