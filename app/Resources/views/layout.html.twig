{# app/Resources/views/layout.html.twig #}

<!DOCTYPE html>
<html>
	<head>
		<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
 
		<title>{% block title %}Musee{% endblock %}</title>
		
		{% block stylesheets %}
			 <link rel="stylesheet" href="{{ asset('bootstrap/css/bootstrap.css') }}" type="text/css" />
			 <link rel="stylesheet" href="{{ asset('style/style.css') }}" type="text/css" />
		{% endblock %}
	</head>
	<body>
		<div id="header">
			<img alt="Banner" title="Earth" src="{{ asset('style/banner.png') }}">
			<nav id="nav" class="navbar navbar-inverse navbar-static-top" >
				<div class="navbar-inner">
					<div class="pull-left">
						<a class="brand" href="#header">Musée de Kourou</a>
					</div>
				
					<div class="container fluid">
						
						<ul class="nav">
							<li><a href="{{ path('musee_accueil') }}">Accueil</a></li>
							<li><a href="{{ path('musee_blog_afficher_liste', {'page' : 1}) }}">Articles</a></li>
							<li><a href="{{ path('musee_collection_plan') }}">Collection</a></li>
							<li><a href="{{ path('musee_aPropos') }}">À propos</a></li>
							<li><a href="{{ path('musee_infosPratiques') }}">Infos pratiques</a></li>
							<li><a href="{{ path('musee_contact') }}">Contact</a></li>
							{% if is_granted('ROLE_ADMIN') %}
							<li><a href="{{ path('musee_pageEnregistrementAdmin') }}">Admin</a></li>
							{% endif %}
								
						</ul>

						<div class="pull-right">
							{% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
								<a href="{{ path('logout') }}" class="btn btn-primary btn-small">Déconnexion</a>
							{% else %}
								<a href="{{ path('login') }}" class="btn btn-primary btn-small">Connexion</a>
							{% endif %}
						</div>

					</div>
				</div>
				
			</nav>
		</div>
	

		{% block body %}
			{% block script%}
			
			{% endblock %}
		{% endblock %}
		
		 <script src="//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
		<script type="text/javascript" src="{{ asset('bootstrap/js/bootstrap.js') }}"></script>
	</body>
	
</html>