<div class="row-fluid">
	<table class="table table-bordered table-striped">
		<caption>
			<h4>Les Utilisateurs enregistrés</h4>
		</caption>
		<thead>
			<tr>
				<th>Identifiant</th>
				<th>Nom</th>
				<th>Prénom</th>
				<th>Rôle</th>
				{% if route == "musee_pageListeModifUserAdmin" %}
					<th>Modifier</th>
				{% elseif route == "musee_pageListeSupprUserAdmin" %}
					<th>Suprrimer</th>
				{% endif %}
			</tr>
		</thead>
		<tbody>
			{% for user in users %}
				<tr>
					<td>{{user.username}}</td>
					<td>{{user.name}}</td>
					<td>{{user.firstName}}</td>
					<td>
						{% for role in user.roles %}
							{{role}} <br>
						{% endfor %}
					</td>
					{% if route == "musee_pageListeModifUserAdmin" %}
						<td><a href="#" class="btn btn-success">Modifier</a></td>
					{% elseif route == "musee_pageListeSupprUserAdmin" %}
						<td><a href="#" class="btn btn-danger">Supprimer</a></td>
					{% endif %}
				</tr>
			{% endfor %}
		</tbody>
	</table>
</div>
<div class="row-fluid">
	<div class="pagination text-center">	
		<ul>
		  {# On utilise la fonction range(a, b) qui crée un tableau de valeurs entre a et b #}
		  {% for p in range(1, nombrePage) %}
			<li{% if p == page %} class="active"{% endif %}>
			  <a href="{{ path(route, {'page': p}) }}">{{ p }}</a>
			</li>
		  {% endfor %}
		</ul>
	</div>
</div>