	{% extends "::layout.html.twig" %}
	{% block body %}
		<div class="container-fluid">
			<div class="row-fluid">
				<div class="offset2 span4">
					<ul class="nav nav-tabs">
						<li>
						<a href="{{ path('musee_create_user_admin') }}">Enregistrer</a>
						</li>
						<li><a href="{{ path('musee_modif_user_liste', {'page' : 1}) }}">Modifier</a></li>
						<li class="active"><a href="{{ path('musee_suppr_user_liste', {'page' : 1}) }}">Supprimer</a></li>
					</ul>
				</div>
			</div>
			<div class="row-fluid">
				<div class="offset1 span10">
					<table class="table table-bordered table-striped">
						<caption>
							<h4>Les Utilisateurs enregistrés</h4>
						</caption>
						<thead>
							<tr>
								<th>Identifiant</th>
								<th>Rôle</th>
								<th>Modifier</th>
							</tr>
						</thead>
						<tbody>
							{% for user in users %}
							<tr>
								<td>{{user.username}}</td>
								<td>
								{% for role in user.roles %}
								{{role}} <br>
								{% endfor %}
								</td>
								<td><a href="{{path('musee_suppr_user_confirm', {'id': user.id}) }}" class="btn btn-danger">Supprimer</a></td>
								
							</tr>
							{% endfor %}
						</tbody>
					</table>
				</div>
			</div>
			<div class="row-fluid">
				<div class="pagination text-center">	
					<ul>
						{# On utilise la fonction range(a, b) qui crée un tableau de valeurs entre a et b #}
						{% for p in range(1, nombrePage) %}
							<li{% if p == page %} class="active"{% endif %}>
							<a href="{{ path('musee_suppr_user_liste', {'page': p}) }}">{{ p }}</a>
							</li>
						{% endfor %}
					</ul>
				</div>
			</div>
		</div>
	{% endblock %}