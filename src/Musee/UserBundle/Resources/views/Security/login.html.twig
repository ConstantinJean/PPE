{# src/Musee/UserBundle/Resources/views/Security/login.html.twig #}

{% extends "::layout.html.twig" %}
{% block body %}
	{% if error %}
		<div>{{ error.message }}</div>
	{% endif %}
	
	

	<div class="container-fluid">
		<div class="row-fluid">
			{% for flashMessage in app.session.flashbag.get('notice') %}
				<div class="offset4 span4 text-center well">
					{{ flashMessage }}
				</div>
			{% endfor %}
		</div>
		<div class="row-fluid">
			<div class = "offset4 span4 text-center ">
				<form action="{{ path('login_check') }}" method="post" class="well">
					<label for="username">Login :</label>
					<input type="email" id="username" name="_username" value="{{ last_username }}" />

					<label for="password">Mot de passe :</label>
					<input type="password" id="password" name="_password" />

					{#
						Si vous voulez controler l'URL vers laquelle l'utilisateur est redirigé en cas de succès
						(plus de détails ci-dessous)
						<input type="hidden" name="_target_path" value="/account" />
					#}

					<br/><button type="submit" class="btn btn-primary">login</button>
				</form>
			</div>
		</div>
	</div>

{% endblock %}